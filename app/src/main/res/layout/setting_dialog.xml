<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:layout_marginLeft="200dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="加气站名称:"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/gasName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="加气机编号:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/gasMachineCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/gunCode"
            style="@style/spinnerSize"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="(安装PAD的加气机)"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="加气枪编号:"
            android:textSize="30dp" />

        <Spinner
            android:id="@+id/gunCode0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/gunCode" />
        <Spinner
            android:id="@+id/gunCode1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/gunCode" />
        <Spinner
            android:id="@+id/gunCode2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/gunCode" />
        <Spinner
            android:id="@+id/gunCode3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/gunCode" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:text="保存"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="取消"
            android:textSize="30sp" />
    </LinearLayout>


</LinearLayout>